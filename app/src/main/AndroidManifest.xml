<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="daovudat.finalproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutApp"
            android:label="Exercises"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Detail" />
        <activity
            android:name=".Nutrition"
            android:label="Nutrition"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Exercises"
            android:label="@string/title_activity_exercises"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".routine.Slicer"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"/>
        <activity android:name=".routine.DetailSlicer"
            android:screenOrientation="portrait"/>

        <activity android:name=".routine.SimpleKill"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"/>
        <activity android:name=".routine.DetailSimpleKill"
            android:screenOrientation="portrait"/>

        <activity android:name=".routine.MissionFit"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"/>
        <activity android:name=".routine.DetailMissionFit"
            android:screenOrientation="portrait"/>

        <activity android:name=".routine.PushUp"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"/>
        <activity android:name=".routine.DetailPushUp"
            android:screenOrientation="portrait"/>

        <activity android:name=".routine.Avenger"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"/>
        <activity android:name=".routine.DetailAvenger"
            android:screenOrientation="portrait"/>

        <activity android:name=".routine.BeastMode"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"/>
        <activity android:name=".routine.DetailBeastMode"
            android:screenOrientation="portrait"/>
    </application>

</manifest>